                    this.isModelLoaded = true;
                    this.updateStatus('üì∑ ƒêang kh·ªüi ƒë·ªông camera...', 'loading');
                    
                    // Start camera
                    await this.startCamera();
                    
                    // Start continuous scanning
                    this.startScanning();
                    
                    // Start time update
                    this.startTimeUpdate();
                    
                    // Load initial stats
                    await this.loadStats();
                    
                    this.updateStatus('üëÅÔ∏è Nh√¨n v√†o camera ƒë·ªÉ check-in/check-out', 'ready');
                    
