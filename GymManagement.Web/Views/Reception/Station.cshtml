            async init() {
                try {
                    this.updateStatus('üîÑ ƒêang t·∫£i m√¥ h√¨nh AI...', 'loading');
                    
                    // Load Face-API.js models
                    await faceapi.nets.tinyFaceDetector.loadFromUri('/lib/face-api/models');
