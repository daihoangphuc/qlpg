            startScanning() {
                setInterval(async () => {
                    if (this.isModelLoaded && !this.isProcessing) {
                        const now = Date.now();
                        if (now - this.lastProcessTime > this.processInterval) {
                            await this.scanForFace();
                            this.lastProcessTime = now;
                        }
