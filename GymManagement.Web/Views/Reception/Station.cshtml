        }

        .loading-message {
            text-align: center;
            color: rgba(255,255,255,0.7);
            padding: 40px 20px;
        }

        .empty-message {
            text-align: center;
            color: rgba(255,255,255,0.7);
            padding: 40px 20px;
            font-style: italic;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .walk-in-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .payment-methods {
                flex-direction: column;
            }
        }
    </style>
</head>
