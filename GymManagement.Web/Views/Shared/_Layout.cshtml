                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="DangKy" asp-action="Index" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group @(ViewContext.RouteData.Values["Controller"]?.ToString() == "DangKy" ? "bg-gray-100 " : "")">
