@model GymManagement.Web.Models.DTOs.ChangePasswordDto
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="mx-auto h-12 w-12 flex items-center justify-center rounded-full bg-yellow-100">
                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Đổi mật khẩu
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Nhập mật khẩu hiện tại và mật khẩu mới
            </p>
        </div>

        <form class="mt-8 space-y-6" asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

            <div class="space-y-4">
                <!-- Current Password -->
                <div>
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-gray-700">Mật khẩu hiện tại</label>
                    <input asp-for="CurrentPassword" 
                           class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                           placeholder="Nhập mật khẩu hiện tại" />
                    <span asp-validation-for="CurrentPassword" class="text-red-600 text-sm"></span>
                </div>

                <!-- New Password -->
                <div>
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700">Mật khẩu mới</label>
                    <input asp-for="NewPassword" 
                           class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                           placeholder="Nhập mật khẩu mới" />
                    <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
                    <p class="mt-1 text-sm text-gray-500">Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số.</p>
                </div>

                <!-- Confirm New Password -->
                <div>
                    <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-700">Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmNewPassword" 
                           class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                           placeholder="Nhập lại mật khẩu mới" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="flex space-x-4">
                <button type="submit" 
                        class="group relative flex-1 flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                        </svg>
                    </span>
                    Đổi mật khẩu
                </button>
                <a asp-action="Profile" 
                   class="flex-1 flex justify-center py-2 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
